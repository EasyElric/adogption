<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >
    <LinearLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >
        <ImageView
            android:id="@+id/list_image"
            android:layout_width="80dip"
            android:layout_height="80dip"
             />
    </LinearLayout>


    <!-- Rightend Arrow
    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow" />
    -->
    <!-- Name-->
    <TextView
        android:id="@+id/petRowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/image"
        android:paddingBottom ="10dip"
        android:text="Name"
        android:textColor="#040404"
        android:textSize="22dip"
        android:textStyle="bold"
        android:typeface="sans" />
    <!-- Animal-->
    <TextView
        android:id="@+id/petRowAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/petRowName"
        android:paddingTop="5dip"
        android:text="Animal"
        android:layout_marginLeft="40dip"
        android:textColor="#343434"
        android:textSize="15dip" />
    <!-- Breed-->
    <TextView
        android:id="@+id/petRowBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petRowName"
        android:layout_toRightOf="@+id/image"
        android:paddingTop="5dip"
        android:text="Breed"
        android:layout_marginLeft="40dip"
        android:textColor="#343434"
        android:textSize="15dip" />
    <!-- Age-->
    <TextView
        android:id="@+id/petRowAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/petRowAnimal"
        android:layout_below="@+id/petRowAnimal"
        android:layout_marginLeft="40dip"
        android:paddingTop="5dip"
        android:text="Age"
        android:textColor="#343434"
        android:textSize="15dip" />
    <!-- location-->
    <TextView
        android:id="@+id/petRowLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petRowBreed"
        android:layout_toRightOf="@+id/image"
        android:paddingTop="5dip"
        android:text="Location"
        android:layout_marginLeft="40dip"
        android:textColor="#343434"
        android:textSize="15dip" />
    <!-- desc-->
    <TextView
        android:id="@+id/petRowDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/petRowLocation"
        android:paddingTop="5dip"
        android:text="Description"
        android:layout_marginLeft="40dip"
        android:textColor="#343434"
        android:textSize="15dip" />
</RelativeLayout>  